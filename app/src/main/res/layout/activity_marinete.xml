<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.havelans.marinete.MarineteActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Maceió - AL"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/light_gray_bkg"
        android:background="#f5f5f5"></android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:id="@+id/light_gray_bkg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#fafafa"></android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/foto_marinete"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar_cidade"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:src="@mipmap/ic_launcher" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nome_marinete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto_marinete"
        android:layout_centerInParent="true"
        android:text="Nome Marinete"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/light_gray_bkg"
        android:layout_margin="@dimen/fab_margin">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/idade_marinete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="40 anos"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAccent" />

        <RatingBar
            android:id="@+id/avaliacao_marinete"
            style="@style/marineteRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:numStars="5"
            android:stepSize="0.1" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/avaliacoes_marinete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="100 avaliações"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_below="@+id/light_gray_bkg"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/fab_margin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webview"
        android:layout_centerInParent="true"
        android:paddingRight="@dimen/fab_margin"
        android:background="#5cb85c"
        android:drawableLeft="@mipmap/ic_confirm"
        android:text="SOLICITAR"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#FFFFFF" />


</RelativeLayout>
